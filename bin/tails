#!/usr/bin/env node

var options = require("nomnom").opts({
  syslog: {
    default: 5140,
    metavar: "PORT",
    help: 'Default: 5140'
  },
  http: {
    default: 8080,
    metavar: "PORT",
    help: "Default: 8080"
  }
}).parseArgs()

var syslog = require('../lib/syslog')
var api = require('../lib/api')

var syslogPort = process.env.TAILS_SYSLOG_PORT || options.syslog
var httpPort = process.env.TAILS_HTTP_PORT || options.http

syslog.server.bind(syslogPort)
api.server.listen(httpPort)
